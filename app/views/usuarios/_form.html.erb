<%= form_for(@usuario) do |f| %>
  <% if @usuario.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

      <ul>
      <% @usuario.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="field span3">
        <%= f.label :nombre %><br>
        <%= f.text_field :nombre, :required => true %>
    </div>
    <div class="field">
        <%= f.label :apellido %><br>
        <%= f.text_field :apellido, :required => true %>
    </div>
    <div class="field">
        <%= f.label :tipo %><br>
       <%= f.select(:tipo, options_for_select([['Usuario', 'usuario'], ['Administrador', 'administrador']], 'Usuario'), required: "true" ) %>
    </div>
    <div class="field">
        <%= f.label :telefono %><br>
        <%= f.number_field :telefono, :required => true %>
    </div>
    <div class="field">
        <%= f.label :correo %><br>
        <%= f.text_field :correo, :required => true %>
    </div>
    <div class="field">
        <%= f.label :cedula %><br>
        <%= f.number_field :cedula, :required => true %>
    </div>
    <div class="field">
        <%= f.label :estado %><br>
        <%= f.select(:estado, options_for_select([['Activo', 'activo'], ['Inactivo', 'inactivo']], 'Activo'), required: "true" ) %>
    </div>
    <div class="field">
        <%= f.label :password, "Clave" %><br>
        <%= f.password_field :password, :required => true %>
    </div>
    <div class="field">
        <%= f.label :password_confirmation, "Confirmar clave" %><br>
        <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
    <%= f.submit 'Crear Cuenta', class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
 </div>
